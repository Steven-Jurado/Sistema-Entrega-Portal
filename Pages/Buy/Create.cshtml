@page
@model ups.delivey.portal.Pages.Buy.CreateModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-sm-12 mb-3 mb-sm-0 mt-3 mt-sm-3">

            @if (Model.Message != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
                    @Model.Message
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

        <form method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Identity Card" name="IdentificacionCliente" required>
                    </div>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" class="form-control form-control-user"
                               placeholder="Name Client" name="NombreCliente" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-12 mb-3 mb-sm-0">
                        <input type="email"  class="form-control form-control-user"
                               placeholder="Email Client" name="CorreoCliente" required>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="text" autocomplete="on" class="form-control form-control-user"
                               placeholder="Name Producto" name="NombreProducto" required>
                    </div>
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input type="number" autocomplete="on" min="0" class="form-control form-control-user"
                               placeholder="Quality Producto" name="Cantidad" required>
                    </div>
                </div>
            </div>

            <input type="submit" class="btn btn-primary btn-user btn-block" value="Create Buy" required />

        </form>
        </div>
    </div>
</div>